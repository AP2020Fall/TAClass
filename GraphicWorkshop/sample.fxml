<?import javafx.geometry.Insets?><?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.control.TextField?><?import javafx.scene.control.PasswordField?>

<GridPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField promptText="Username..." GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="username"/>

    <Label text="password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField promptText="Password..." GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="password"/>

    <Button text="Login" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="200" GridPane.columnSpan="2"
            GridPane.halignment="CENTER" onAction="#startGame"/>
</GridPane>